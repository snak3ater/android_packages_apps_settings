<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/interface_simple_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:key="simple_settings">

	<PreferenceScreen
                android:key="animation_settings"
                android:fragment="com.android.settings.simpleaosp.Animations"
                android:title="@string/anim_settings_title" />

        <PreferenceScreen
                android:key="status_bar"
                android:fragment="com.android.settings.simpleaosp.StatusBarSettings"
                android:title="@string/status_bar_title" />

        <PreferenceScreen
                android:key="navigation_bar"
                android:fragment="com.android.settings.simpleaosp.NavigationBarSettings"
                android:title="@string/navigation_bar_title" />

        <PreferenceScreen
                android:key="lock_screen"
	        android:fragment="com.android.settings.simpleaosp.LockscreenSettings"
 	        android:title="@string/lockscreen_title" />
</PreferenceScreen>

